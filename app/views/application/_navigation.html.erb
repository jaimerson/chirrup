<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <%= link_to root_path, class: 'logo' do %>
      <%= image_tag "logo_white_small.png", alt: "Logo image" %>
    <% end %>
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu show">
        <li class="nav-link"><a href="javascript:void(0)">Home</a></li>
        <% if signed_in? %>
          <li class="nav-link"><a href="javascript:void(0)">Notifications</a></li>
        <% end %>
      </ul>
    </nav>
    <div class="navigation-tools">
      <div class="search-bar">
        <form role="search">
          <input type="search" placeholder="Search" />
          <button type="submit">
            <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png" alt="Search Icon">
          </button>
        </form>
      </div>
      <nav role="navigation">
        <ul id="js-navigation-menu" class="navigation-menu show">
          <% if signed_in? %>
            <li class="nav-link">
              <a href="javascript:void(0)">
                @<%= current_user.username %>
              </a>
            </li>
          <li class="nav-link">
            <%= link_to t('layouts.application.sign_out'), sign_out_path, method: :delete %>
          </li>
        <% else %>
          <li class="nav-link">
            <%= link_to t('layouts.application.sign_in'), sign_in_path %>
          </li>
        <% end %>
      </ul>
    </nav>
    </div>
  </div>
</header>
