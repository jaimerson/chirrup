<div class="comment">
  <div class="comment-image">
    <%= user_avatar_for(post.user, size: 150) %>
  </div>
  <div class="comment-content">
    <h1>@<%= post.user.username %></h1>
    <p><%= post.content %></p>
    <p class="comment-detail">
      <%= time_ago_in_words(post.created_at) %>
    </p>
  </div>
</div>
